input[type=checkbox].checkmark
  -webkit-appearance: none
  width: 1.2rem
  height: 1.3rem
  margin: 0
  outline: none
  cursor: pointer

  &:after
    transition: border .2s ease

  &:hover:after
    border: .1rem solid #ccc

  &:checked:after
    border: .1rem solid #888

  &:hover:after
  &:checked:after
    content: ' '
    display: inline-block
    width: 1rem
    height: .5rem
    position: relative
    top: -50%
    left: 25%
    border-top: 0
    border-right: 0
    transform: rotate(-45deg)
