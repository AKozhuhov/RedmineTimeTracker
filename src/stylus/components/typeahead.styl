.twitter-typeahead
  width: 100%

.input-list
  .tt-input
  .tt-hint
    background: none !important
    box-shadow: none
    text-align: right
    &:hover
    &:focus
      box-shadow: none

.tt-input
.tt-hint
  width: 100%
  border: 0
  border-radius: $field_border_radius !important
  outline: none
  box-shadow: inset 0 0 0 .1rem rgba(0,0,0,.1)
  &:hover,
  &:focus
    box-shadow: inset 0 0 0 .1rem rgba(0,0,0,.2)
  text-ellipsis()

.tt-hint
  color: #aaa

.tt-dropdown-menu
  width: 100%
  margin-top: .5rem
  padding: .5rem 0
  background-color: #fff;
  border: .1rem solid rgba(0, 0, 0, 0.2);
  border-radius: $field_border_radius
  box-shadow: 0 .5rem 1rem rgba(0,0,0,.2)

.tt-suggestion
  padding: 0 .8rem
  height: $height_input
  line-height: $height_input
  text-ellipsis()

.tt-suggestion.tt-cursor
  color: #fff
  background-color: $color_key_weak

.tt-highlight
  color: $color_key_weak
