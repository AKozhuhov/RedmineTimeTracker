uz-pagination
  display: flex

.pagination
  margin: 10px 0px
  width: 100%
  display: flex
  justify-content: center
  &>li:nth-child(1)>a
  &>li:nth-last-child(1)>a
    padding: 2px 6px
  &>li:nth-child(2)>a
  &>li:nth-last-child(2)>a
    padding: 2px 8px
  &>li>a
    border: none
    border-radius: 12px
    padding: 2px 7px
    margin: 0 2px
    color: #666
    cursor: pointer
  &>.active>a
    background-color: $color_key_weak
    color: #fff
  &>.disabled>a
    color: #ccc
    cursor: not-allowed

.pagination--stretch>li
  display: flex
  flex-grow: 1
  justify-content: center
  &:nth-child(1)
  &:nth-child(2)
  &:nth-last-child(1)
  &:nth-last-child(2)
    flex-grow: inherit
