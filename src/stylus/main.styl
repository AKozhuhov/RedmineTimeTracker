@import '_variable'
@import '_mixin'
@import 'components/modal'

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display: none !important

.wrap
  @import 'components/*'

.defs // for svg
  display: none

html, body
  height: 100%
  font-weight: 400
  font-size: 62.5%
  color: $color_font
  font-family: mplus-2c-regular
  -webkit-user-select: none


input.input-sm
  height: $height_input
  font-size: 1.2rem

input[type=number]::-webkit-inner-spin-button
  -webkit-appearance: none

.form-control
  border: none
  box-shadow: inset 0 0 0 .1rem rgba(0,0,0,.1)
  &:hover,
  &:focus
    box-shadow: inset 0 0 0 .1rem rgba(0,0,0,.2)


.wrap
  height: 100%
  overflow-y: scroll
  display: flex
  flex-direction: column
  font-size: 1.2rem

  #issue header .caption .title .icon
    margin: .3rem .8rem 0 0

  #options, #accounts, #issue
    header
      a, a:hover
        text-decoration: none
    .caption__icon
      margin-left: 1.4rem

  .caption
    align-center()
    height 100%
    color: $color_key
  .caption__title
    margin: 0
    font-size: 1.3rem
    flex: 1
    align-center()
  .caption__subtitle
    font-size: .95rem
    margin: 0.1rem -1rem 0 0.7rem
  .caption__icon
    font-size: 1.8rem
    margin-right: 0.8rem
  .caption__icon--tomato
    width: 2.3rem
    height: 2.3rem
    margin-right: 0.3rem
  .caption__icon--slide
    padding: 0 .4rem
    font-size: 1.4rem
    opacity: 0
    transition: opacity 0.2s ease
  .caption__icon--collapse
    font-size: 1.8rem
    position: relative
    left: 1.8rem
    opacity: 0
    visibility: hidden
    transition: 0.2s ease
  .caption:hover .caption__icon--collapse
    visibility: visible
    opacity: 1


.content
  margin-top: $height_header
  overflow: hidden
  flex-grow: 1
  flex-shrink: 0

  & > section
    padding: 1rem

.searchform
  margin-bottom: .5rem

.animate-switch-container
  position: relative

.animate-switch
  position: absolute
  width: 100%

.searchform-icon
  margin-right -0.5rem
  padding-right .5rem
  position: relative
  .input-sm
    padding-right: 2.4rem
  i
    opacity: .5
    position: absolute
    top: .8rem
    right: 1.2rem
    padding-left: .2rem
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .7

.searchform-with-icon
  align-items: center
  display: flex
  position: relative
  i
    opacity: .5
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .8
  .twitter-typeahead
    flex: 1

.header-bar
  position: fixed
  width: 100%
  height: $height_header
  background: #fff
  transition: box-shadow .2s ease
  card(1)
  z-index: $z-index-header-bar
  &:hover
    card(2)

.project
  height: 0

.project-id
  color #aaa

.project-label
  padding: 0 1rem 0 .5rem
  max-width: 80%
  display: inline-block
  vertical-align: bottom
  text-ellipsis()

.project-title
  width: 100%
  border: none
  padding: 0
  height: $height_header
  background-color: #fff
  position: absolute
  outline: none
  z-index: $z-index-project-title
  .fa
    font-size: 1.3rem
    color #ccc
    transition: color .2s ease
  &:hover .fa
    color #666

input.project-search
  height: 3rem

.project-search
  padding-left: 1.6rem
  position: absolute
  transition: left .3s ease
  left: 40%
  z-index: $z-index-project-search
  opacity: 0
  visibility: hidden

.project-search.active
  visibility: visible
  opacity: 1
  left: 0
  box-shadow: none

.project-content
  position: fixed
  width: 100%
  max-height: 90%
  min-height: .5rem
  top: -100%
  background-color: #fff
  card(3)
  transition: top .3s ease
  overflow-y: scroll

.project-content.active
  top: 3rem

.numbered-list
  margin: 0
  padding-left: 0

.numbered-list--clickable
  padding-left: .4rem
  .number
    transition: padding-left ease .2s

  & > li
    counter-increment: account
    margin-bottom: 0.5rem
    cursor: pointer
    align-items: center

    &.isSaving
      cursor: wait

    & > .number:before
      content: counter(account)
      padding-right: 1rem
      color: #aaa

    &:hover
      .number
        padding-left: .5rem
      span
      .btn
        width: auto
        color: $color_key
        visibility: visible
        opacity: 1
      .number:before
        color: $color_key

    .btn
      border: none
      color: #aaa
      opacity: 0
      visibility: hidden
      transition: opacity .2s ease
      width: 0

.numbered, .starred
  &>.numbered-label
    line-height: $height_input
    margin: -1.2rem 0 0 0.5rem
    padding-left: 0.2rem
    border-bottom: solid .1rem #ccc
.numbered
  counter-increment: account
  &>.numbered-label:before
    content: counter(account)
    padding-right: 0.4rem
    color #aaa
.starred
  &>.numbered-label:before
    content: "â˜…"
    padding-right: 0.5rem
    color #aaa

.project-list
  padding-left: 0
  &>li
    display: flex
    padding-left: 1rem
    list-style-type: none
    & span:nth-child(1)
      transition: margin-left .2s ease
    &:hover
      background-color: $color_key_weak
      & span
        color: #fff
      & span:nth-child(1)
        margin-left: 0.5rem
      .star__enable
        color: $color_key
    .numbered-label
      width: 100%
      height: 2.4rem

.input-and-btn
  display: flex
  .input
    flex: 1
  .btn
    color: $color_icon
    &:hover
      color: $color_key

.input-and-btn__plus-btn
  margin: 0 0 0 .7rem
  height: $height_input
  line-height: $height_input + 0.15
  font-size: 1.6rem

@keyframes slide-in-left
  from {left: 100%}
  to   {left: 0}

@keyframes slide-out-left
  from {left: 0}
  to   {left: -100%}

@keyframes slide-in-right
  from {right: 100%}
  to   {right: 0}

@keyframes slide-out-right
  from {right: 0}
  to   {right: -100%}

.rotate__fast
  transition: transform .25s ease

.rotate__slow
  transition: transform .5s ease

.rotate180
  transform: rotate(180deg)

.rotate225
  transform: rotate(180deg + 45deg)

.rotate360
  transform: rotate(360deg)

.top-space-l
  padding-top: 2.5rem

.top-space-m
  padding-top: 1rem

.top-space-s
  padding-top: .5rem

.bottom-space-l
  padding-bottom: 2.5rem

.bottom-space-m
  padding-bottom: 1rem

.bottom-space-s
  padding-bottom: .5rem

.curor-pointer
  cursor: pointer

.property-list
  border-bottom: solid .1rem $color_border
  padding: 0 .9rem 0 1rem
  height: $height_property_list
  transition: background .2s ease
  &:hover
    background-color: $color_back_hover

  span:not(.twitter-typeahead)
    font-weight: normal
    text-ellipsis()

  label
    display: flex
    align-items: center
    justify-content: space-between
    height: 100%
    margin: 0

  input:not([type=checkbox])
    box-shadow: none
    background: transparent
    text-align: right
    flex: 1
    &:hover, &:focus
      box-shadow: none

  input::-webkit-input-placeholder
    color: #aaa

  input.switch
    position: relative
    left: .6rem

  .input-sm
    font-size: $font_size_selected
    color: $color_font_selected

  .input-sm[type=select]
    padding-right: 2.2rem

  .input-sm:not([type=select])
    padding: 0 0 0 1rem

  .fa.fa-asterisk
    font-size: 1rem
    width: 0
    color: $color_key
    opacity: 0.8
    margin-left: 0.2rem

.property-list__first
.well > .property-list:first-child
  border-top: solid .1rem $color_border

.property-list
.property-list__selected
  .fa
    font-size: 1.8rem

.property-list__tab
  position: relative

.tab-list
  padding: 0
  margin: 0
  z-index: $z-index-tab-list
  &>li
    padding-left: 1rem
    height: $height_property_list
    line-height: $height_property_list - 0.1
    border-bottom: .1rem solid $color_border
    transition: background .2s ease
    &:hover, &.hover, &.active
      background-color: $color_back_hover
  &>li.active a
    width: 7rem
    display: inline-block
    background-color: $color_back_hover
    position: relative
    z-index: $z-index-tab-list-li
  a
    color: $color_font
    cursor: default
    text-decoration: none
    transition: background .2s ease

.tab-content
  position: absolute
  height: 100%
  top: 0
  right: 0
  left: $width_tab

.tab-content>.tab-pane
  position: absolute
  display: block
  top: 0
  right: 0
  bottom: 0
  left: 0
  &.active .property-list__selection
    left: 0
    z-index: $z-index-tab-pane-active
    height: auto
    min-height: $height_property_list * 4

.property-list__selected
  position: absolute
  top: 0
  right: 0
  left: $width_tab
  z-index: $z-index-property-list
  ul
    height: $height_property_list
    margin: 0
    padding: 0 2.2rem 0 0
    justify-content: flex-end
    cursor: pointer
  li
    list-style-type: none
    font-size: $font_size_selected
    margin-right: .5rem
    color: $color_font_selected
    text-ellipsis()
    &:not(:last-child):after
      content: ', '
  i
    line-height: $height_property_list
    position: absolute
    right: 1rem

.property-list__selection
  width: 100%
  height: 100%
  text-align: right
  color: $color_font
  margin: 0
  padding: .5rem 0
  position: relative
  left: 200%
  transition: left .2s ease
  background-color: $color_back_hover
  &.property-list
    border-left: .1rem solid $color_border
  &>li
    list-style-type: none
    line-height: 1.8rem
  &>li:hover
    background-color: #f0f0f0
  label
    width: 100%
    padding-right: 1rem
    cursor: pointer
  span
    display: inline-block
    width: calc(100% - 1.6rem)
    text-ellipsis()

.loading
  position: relative

.loading:after
  fa()
  content: "\f110"
  font-size: 1.4rem
  line-height: inherit
  animation: spin 1.4s infinite linear
  position: absolute
  top: 0
  left: calc(50% - 0.4rem)

.setting__section
  display: flex
  align-items: center

.setting__section--block
  display: block

.setting__labels
  flex: 1
  margin-bottom: .3rem

.setting__description
  margin-left: .5rem
  color: #999

.setting__options
  .btn-sm
    font-size: 1rem
    color: $color_font
    padding: .3rem .8rem
    &.loading
      background-color: #eee !important
      border-color: #adadad

.setting__button
  margin-right: -0.6rem

.setting__input
  width: 4.5rem
  text-align: right

.modal-dialog
  .setting__options
    flex: 2

  .setting__labels
    margin-bottom: 0
    margin-right: 1rem

  .setting__input
    width: 100%
    text-align: left


#timer

  $width_button = 3.4rem

  header
    height: 6rem
    margin-top: -1rem

  .caption
    cursor: pointer
    position: relative

  .caption__title
    width: 100%
    height: 1.8rem
    position: absolute
    top: 36%
    left: 0
    z-index: $z-index-caption__title

  .caption__icon--slide
    flex-grow: 1
    height: 100%
    display: flex
    align-items: center
  .caption__icon--slide:hover
    opacity: 1
  .caption__icon--left
    justify-content: flex-start
  .caption__icon--right
    justify-content: flex-end

  .select
    position: relative
    height: $height_input
    background-color: $color_key
    border-radius: $field_border_radius !important

  .inputWidhButton
    padding-right $width_button

    input
      border-right: solid .1rem #f5f5f5
      border-radius: $field_border_radius 0 0 $field_border_radius !important
      box-shadow: none
      background-color: $color_key
      color: #fff

    input::-webkit-input-placeholder
      color: rgba(255, 255, 255, 0.9)

    .searchform-icon i
      font-size: 1.8rem
      opacity: .7
      color: #fff
      top: .6rem
      right: 1.4rem

    .searchform-icon:hover i
      opacity: .9


  .btn
    border: none
    width: $width_button
    color: #f5f5f5
    font-size: 1.4rem
    display: inline-block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    margin-left: .4rem
    &:hover
      background-color: $color_key_down
      color: #ffffff

    img
      width: 2.4rem
      height: 2.4rem

  .progress
    margin-bottom 0
    height: $height_input
    border-right: solid .1rem #f5f5f5
    border-radius: $field_border_radius 0 0 $field_border_radius
    color: $color_font_bright
    background-color: transparent
    display: flex

  .progress-bar
    width: 200%
    background-color: $color_key
    box-shadow: none
    background-size: 4rem 4rem

  .progress-bar--outer
    position: absolute
    height: $height_input
    width: "calc(100% - .1rem - %s)" % $width_button
    overflow: hidden
    -webkit-clip-path: inset(0% -2% 0% 0% round $field_border_radius)

  .progress--label
    line-height: $height_input
    z-index: 1
    text-ellipsis()

  p.progress--label
    margin: 0
    padding-left: .4rem
    flex: 1

  timer.progress--label
    padding-right: .4rem

  @keyframes progress-bar-stripes
    from  { transform: translateX(0) }
    to    { transform: translateX(-4rem) }

  .form-inline
    display: flex
    margin: 1rem 0 0 0
    height: $height_input

  .select-activity
    flex: 5

  .separater
    width: .5rem

  .time
    flex: 3
    input
      width: 100%
      text-align: right
      padding: 0 2.2rem 0 1rem
      &:hover+span
        color: #888
    .ui-timepicker-list li
      text-align: right
      padding-right: 2.2rem
    span
      line-height: $height_input
      color: #aaa
      position: relative

  .time__total
    width: 100%
    text-align: right
    text-ellipsis()

  .comment
    margin: 1rem 0 0 0

    textarea
      font-size: 1.4rem
      margin 0 -3.6rem 0 0
      border-radius: $field_border_radius !important
      display: inline-block

    div
      display: inline-block

    span
      opacity: 0.8
      float: right

  container_height = 19rem
  .animate-switch-container
    height: container_height
    transition-duration: .3s

    &:before
      content: ""
      background-color: #fff
      width: 1rem
      height: container_height
      position: relative
      left: -1rem
      float: left
      z-index: $z-index-side
    &:after
      content: ""
      background-color: #fff
      width: 1rem
      height: container_height
      position: relative
      right: -1rem
      float: right
      z-index: $z-index-side

  .animate-switch.ng-animate
    transition-duration: .25s

  .carousel-to-right
    .ng-enter
      animation: slide-in-right  .25s ease-out
    .ng-leave
      animation: slide-out-right .25s ease-out

  .carousel-to-left
    .ng-enter
      animation: slide-in-left  .25s ease-out
    .ng-leave
      animation: slide-out-left .25s ease-out

  .select-issues
    .tt-dropdown-menu
      padding: 0 0 .5rem 0
    .tt-suggestion
      height: auto
      padding: 0
    .tt-cursor
      background-color: #fff

  .select-issues__project
    display: block
    height: 3rem
    width: 100%
    font-size: 1.2rem
    text-ellipsis()
    margin: 0 .5rem
    padding: .4rem 0 0 .3rem
    border-bottom: solid .1rem #ccc

  .numbered-label__number
    margin-left: 0.6rem
    transition: margin-left .2s ease

  .tt-cursor
    .select-issues__project
      color: $color_font
    .numbered-label
      background-color: $color_key_weak
    .numbered-label__number
      margin-left: 1rem
      color: #fff
    .numbered-label__label
      color: #fff


#issue

  .animate-height
    transition: height .32s ease

  .input-and-btn .btn
    margin: -0.6rem 0 0 .6rem
    font-size: 2rem
    .fa
      position: relative
      top: -0.2rem

  .issue-list

    .active .numbered-label, .active .numbered-label:hover
      margin-left: .5rem
      color: #fff
      span
        color #fff

    .numbered-label
      span:nth-child(1)
        transition: margin-left .2s ease
        vertical-align: middle
    .numbered-label:hover
      span
      .btn
        color: $color_key
      &>span:nth-child(1)
        margin-left: 0.5rem

      .tooltip-inner span
        color: $color_font

  .issue-list__content
    padding-left: 0
    margin: 0
    &.loading:after
      color: #999
      font-size: 1.8rem
      margin: .5rem 0
      position: relative
      top: 0
      left: calc(50% - 0.6rem)

  .issue-list__content--empty
    margin-bottom: 0

  .issue-list__content--empty:after
    content: "not found ..."
    color: #aaa
    align-center()

  .issue-list__item
    list-style-type: none
    height: $height_issue_list_item
    position: relative
    display: flex

    .btn
      font-size: 1.4rem
      border: none
      color: #aaa
      line-height: 1

    .btn.external-link:hover
      color: $color_key

    &.active
      background-color: $color_key
      border-radius: 1rem
      transition: background-color ease 0.2s

  .issue-list__content.paging
    transition-duration: .3s

  .issue-list__content:not(.paging-active)
    .ng-enter
      animation: fade-in .2s ease-out
    .ng-leave
      animation: fade-out .2s ease-out

  .issue-list__content.paging-left
    .ng-enter
      animation: slide-in-left .3s ease-out
    .ng-leave
      display: none

  .issue-list__content.paging-right
    .ng-enter
      animation: slide-in-right .3s ease-out
    .ng-leave
      display: none

  @keyframes fade-in
    from
      height: 0
      opacity: 0
    to
      height: $height_issue_list_item
      opacity: 1

  @keyframes fade-out
    from
      height: $height_issue_list_item
      opacity: 1
    to
      height: 0
      opacity: 0

#accounts

  label-width = 70

  .isSaving
    opacity: 0.8
    cursor: wait
    pointer-events: auto

  .account-setting
    position: relative
    height: 20.2rem
    .animate-switch
      &.ng-enter
      &.ng-leave
        transition: 0.2s ease all
      &.ng-enter
        opacity: 0
        &.ng-enter-active
          opacity: 1
      &.ng-leave
        opacity: 1
        &.ng-leave-active
          opacity: 0

  .account-setting__buttons
    display: flex
    justify-content: center

    .btn
      font-size: 1.2rem

    .account-setting__buttons--add
      height: $height_input - .4
      width 12rem
      margin 0 2.5rem

    .account-setting__buttons--save
    .account-setting__buttons--remove
      height: $height_input - .4
      width 8rem
      margin 0 0.25rem

  .select-mode
    align-center()
    margin: 0 2.5rem 1.5rem 2.5rem

  .select-mode__button
    height: $height_input - .6
    width: 10rem
    font-size: .9rem
    border-color: $color_key_weak
    color: $color_key_weak
    transition: all .2s ease
    &:hover
      border-color: $color_key
      color: $color_key

    &.active
      background-color: $color_key_weak
      color: snow
      &:hover
        background-color: $color_key
        color: snow

  .clear
    align-center()
    padding: 1.5rem 0
    button
      padding: .2rem 1.5rem
      color: $color_key
      i
        padding-right .6rem
        font-size: 1.3rem
      i, span
        vertical-align: middle

#about
  color: #fff
  background-color: rgba(247,80,90, 1)
  padding: 4rem 1rem .5rem 1rem
  font-family: mplus-2c-thin

  .caption
    text-align: center
    font-size: 2rem
    color: #fff

  .version
    position: relative

    span
      position: relative
      left: 50%
      margin-left: 5rem

  footer
    padding: 3rem 0 0 0
    text-align: right
    p
      margin: 0
      font-size: 0.8rem

