.message
  position: fixed
  padding: 0
  bottom: 0
  left: 0
  right: 0
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(253, 253, 253, .925)), to(rgba(253, 253, 253, .8)))
  box-shadow: 0 0 1px rgba(0, 0, 0, .2)
  text-align: center
  z-index: $z-index-message

  ul
    padding-left: 0
    margin-bottom: 0

  li
    padding: 0px 10px
    height: 0
    overflow: hidden
    transition: height .2s ease
    align-center()

  span
    color: #555

  i
    color: #aaa
    font-size: 0.9em
    padding-right: 8px
