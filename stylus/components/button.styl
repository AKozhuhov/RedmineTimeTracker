.btn
  background-color: transparent
  padding: initial
  outline: none !important
  box-shadow: none
  transition: background-color .2s ease
  .active
    box-shadow: none
  &.loading
    span
      display: inline-block
      opacity: 0

.btn-default:focus
   background-color: transparent

.btn-default:hover
   background-color: #eee

