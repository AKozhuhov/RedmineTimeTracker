.btn
  background-color: transparent
  padding: initial
  outline: none !important
  box-shadow: none
  .active
    box-shadow: none
  &.loading
    span
      display: inline-block
      opacity: 0

.btn-default
  transition: background-color .2s ease
  &:focus
    background-color: transparent
  &:hover
    background-color: #eee

.btn-color
  transition: background-color .2s ease
  color: snow
  background-color: color_key_weak
  &:hover
    background-color: color_key
