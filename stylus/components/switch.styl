input[type=checkbox].switch
input[type=radio].switch
  -webkit-appearance: none
  box-shadow: inset 0px 0px 0px 1px #e6e6e6
  border-radius: 15px
  background-color: #fff
  padding: 1px
  margin: 0
  display: inline-block
  width: 52px
  height: 31px
  position: relative
  cursor: pointer
  transition: all .3s ease-out
  -webkit-transform: scale(.7) // Adjust size
  outline: none
  border: none

  &:checked
    box-shadow: inset 0px 0px 0px 20px #f57f87

  &:after
    content: ''
    position: absolute
    width: 29px
    height: 29px
    border-radius: 15px
    box-shadow: 0px 2px 2px 1px rgba(0,0,0,.2)
    cursor: pointer
    background-color: #fff
    left: 1px
    transition: ease-in .1s

  &:checked:after
    left: 22px

