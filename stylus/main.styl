
clearfix()
  &:before,
  &:after
    content: " "
    display: table
  &:after
    clear: both


html, body
  height: 100%
  font-weight: 200
  font-size: 12px
  color: #333

input.input-sm
  height 28px

p
  font-size: 0.9em

.form-control
  border: none
  box-shadow: 0 0 0 1px rgba(0,0,0,.1)!important
  &:hover,
  &:focus
    box-shadow: 0 0 0 1px rgba(0,0,0,.2)!important

.wrap
  height: 100%
  overflow-y: scroll

.wrap > section
  clearfix()
  padding: 20px 10px 20px 10px

.wrap > section:nth-last-of-type(2)
  padding-bottom: 5px

.wrap > section:nth-last-of-type(1)
  padding: 0

.wrap > section:nth-child(odd)
  background-color: #fcfcfc

.wrap > section:nth-child(even)
  background-color: #f0f0f0

.inputWidhButton
  display inline-block
  padding-top 0
  width 100%
  vertical-align middle
  margin-right -27px
  padding-right 27px

.iconButton
  font-size 24px
  padding 0px
  margin-left: 4px
  background-color transparent
  border: none

  &:active
    -webkit-box-shadow 0px 0px
    box-shadow 0px 0px

  &:focus
    outline: none

.message
  position: fixed
  bottom: 0
  left: 0
  right: 0
  height: 0px
  background-color: rgba(255, 255, 255, .8)
  border-top: 1px solid rgba(255, 255, 255, .9)
  box-shadow: 0 0 15px -4px rgba(0, 0, 0, .2)
  text-align: center
  transition: .3s ease

.message.active
  height: 27px

  i
    color: #777
    font-size: 12px
    margin-right: 8px
    vertical-align: middle

  span
    color: #888
    line-height: 24px


#timer

  .fa-play
    color #F56F6B
    &:hover
      color #d2322d

  .fa-stop
    color #aaaaaa
    font-size 25px
    &:hover
      color #c0c0c0

  .progress
    margin-bottom 0px

  .comment
    textarea
      margin 6px 0 0 0px

    div
      height: 0

    span
      position: relative
      top: -15px
      opacity: 0.8
      float: right


#issue

  .form-group
    display: inline-block
    margin-bottom: 0
    vertical-align: middle

  .project
    width: 60%
    margin-right: 5px

  .search
    width: 40%
    margin-right -5px
    padding-right 5px
    position: relative

    i
      opacity: .5
      position: absolute
      top: 8px
      right: 12px

    &:hover i
      opacity: .7

  .issueList
    ul
      margin-top: 10px
      padding-left: 4px

    li
      list-style-type: none
      height: 20px
      overflow: hidden

      span
        vertical-align: middle
        display: inline-block

      span:nth-child(1)
        width: 26px

      span:nth-child(2)
        margin-right: -40px
        padding-right: 45px
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        width: 100%

      .btn
        background-color: transparent
        border: none
        padding: 0
        color: #aaa
      .btn:hover
        color: #555


#options
  button
    margin-right 5px

