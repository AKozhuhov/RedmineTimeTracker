color_key = #f7505a
color_key_down = #e55050
height_input = 28


clearfix()
  &:before,
  &:after
    content: " "
    display: table
  &:after
    clear: both


text-ellipsis()
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden


align-center()
  display: flex
  justify-content: center
  align-items: center


html, body
  height: 100%
  font-weight: 400
  font-size: 0.88em
  color: #555
  font-family: mplus-2c-regular


.wrap
  height: 100%
  padding: 0px 10px
  overflow-y: scroll

  input.input-sm
    height height_input px

  .form-control
    border: none
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.1)
    &:hover,
    &:focus
      box-shadow: inset 0 0 0 1px rgba(0,0,0,.2)

  .btn
    box-shadow: none
    background-color: transparent
    outline: none
    .active
      box-shadow: none
    &.loading
      background-color: #ebebeb
      border-color: #adadad
    span.icon-minus
      display: inline-block
      width: 100%
      height: 1em
      line-height: 1
      position: relative
      width: 1em
      border-radius: 50%
      border: solid 1px
      margin: -5px 0 0 0
      vertical-align: middle
      background-image: -webkit-gradient(linear,left center,right center,from(#aaa),to(#aaa));
      background-size: 70% 1px;
      background-repeat: no-repeat;
      background-position: 45% 50%;

  .invalid
  .invalid:hover
  .invalid:focus
    border-color: #e9322d
    box-shadow: 0 0 6px #f8b9b7

  .search
    margin-right -5px
    padding-right 5px
    position: relative
    input
      padding-right: 20px
    i
      opacity: .5
      position: absolute
      top: 8px
      right: 12px
    &:hover i
      opacity: .7

  header
    height: 5em
    .caption
      align-center()
      height 100%
      color: color_key
    .title
      align-center()
      font-size: 1.05em
      flex: 1
    .icon
      display: table
      font-size: 1.3em
      margin: 0 8px 0 0
      span
        display: table-cell
        text-align: center
        vertical-align: middle


.frame
  overflow: hidden

  & > section
    padding: 0 0 25px 0

message_color = #555

.message
  position: fixed
  padding: 0
  bottom: 0
  left: 0
  right: 0
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(253, 253, 253, .925)), to(rgba(253, 253, 253, .8)))
  box-shadow: 0 0 1px rgba(0, 0, 0, .2)
  text-align: center
  z-index: 1000

  ul
    padding-left: 0
    margin-bottom: 0

  li
    color: message_color
    padding: 0px 10px

  .list-item
    display: inline-table
    width: 100%

  li
  .list-item
    transition: height .3s ease, opacity .25s ease

  i
    font-size: 0.9em
    padding-right: 8px

  i,
  span
    display: table-cell
    vertical-align: middle


.tooltip

  color_tooltip = #f0f0f0

  &.in
    opacity: 1

  &.top .tooltip-arrow
    border-top-color:    color_tooltip

  &.bottom .tooltip-arrow
    border-bottom-color: color_tooltip

  &.right .tooltip-arrow
    border-right-color:  color_tooltip

  &.left .tooltip-arrow
    border-left-color:   color_tooltip

  .tooltip-inner
    color: #555
    text-align: left
    background-color: color_tooltip


.btn-default:focus
   background-color: transparent
   outline: none

.btn-default:hover
   background-color: #ebebeb


#timer

  width_button = 34

  .caption
    .fa
      transition: opacity 0.2s ease
      padding: 0 4px
      font-size: 1.5em
      opacity: 0
    &:hover > .fa
      opacity: 1

  .select
    position: relative
    height: height_input px
    background-color: color_key
    border-radius: .3125em !important

  .inputWidhButton
    display inline-block
    padding-right width_button px
    width 100%

    & > div
      border-right: solid 1px #f5f5f5
      border-radius: .3125em 0 0 .3125em !important

    .dropdown-text
      box-shadow: none
      background-color: color_key
      color: #fff
      &:after
        opacity: .9

    .dropdown-toggle:hover ~ .dropdown-text,
    .dropdown-toggle:focus ~ .dropdown-text
      box-shadow: none
      background-color: color_key_down
      &:after
        opacity: 1

  .btn
    padding: 0px
    margin-left: 4px
    border: none
    display: inline-block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: width_button px
    color: #f5f5f5
    &:hover
      background-color: color_key_down
      color: #ffffff

    img
      width: 24px
      height: 24px

  .progress
    margin-bottom 0px
    height: height_input px

  .progress-bar
    width: 100%
    background-color: color_key
    box-shadow: none
    color: #fafafa
    display: flex

    span
      display: inline-block
      text-ellipsis()
      &:nth-child(1)
        flex: 1
      &:nth-child(2)
        flex-basis: 60px

    span, timer
      line-height: height_input px
      vertical-align: middle

  .form-inline
    display: flex
    margin: 10px 0 0 0
    height: height_input px
    .activity
      flex: 5
    .separater
      width: 5px
    .time
      flex: 3
      input
        margin 0 -20px 0 0
        padding: 0 25px 0 10px
        display: inline-block
        position: relative
        top: -1px
        &:hover+span
          color: #888
      span
        line-height: height_input px
        display: inline-block
        color: #aaa
        position: relative
        left: 2px

  .comment
    margin: 10px 0 0 0

    textarea
      margin 6px 0 0 0px

    div
      height: 0

    span
      position: relative
      top: -15px
      opacity: 0.8
      float: right

  .animate-switch-container
    position: relative
    height: 128px

  .animate-switch
    position: absolute
    width: 100%
    &.ng-enter
    &.ng-leave
      transition: 0.3s ease all
    &.ng-enter
      left: 100%
      &.ng-enter-active
        left: 0
    &.ng-leave
      left: 0
      &.ng-leave-active
        left: -100%


#issue
  .form-group
    display: inline-block
    margin-bottom: 0
    vertical-align: middle

  .project
    width: 60%
    margin-right: 5px

  .search
    width: 40%

  .issueList
    ul
      margin-top: 10px
      padding-left: 4px

    li
      list-style-type: none
      height: 20px
      overflow: hidden
      display: flex

      .btn
        border: none
        padding: 0
        color: #aaa
        transition: .2s ease

    li > span
      vertical-align: middle
      display: inline-block
      transition: .2s ease

    li > span:nth-child(1)
      padding-right: 5px
      min-width: 15px
      color #aaa

    li > span:nth-child(2)
      flex: 1
      text-ellipsis()

    li:hover
      & > span:nth-child(1)
        text-indent: 5px

      & > span
      .btn
        color: color_key
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));


#options

  label-width = 70

  .form-group
    margin-bottom: 10px

  .input-and-btn
    display: flex
    .input
      flex: 1
    .btn
      padding: 0 0 0 7px
      height: height_input px
      line-height: height_input px
      font-size: 16px
      color: #888
      transition: color .25s ease
      &:hover
        color: color_key

  .animate-add-account
    margin: 10px 0
    height: 197px
    border-collapse: separate
    border-spacing: 0px
    transition: ease .3s
    opacity: 1
    -webkit-transform: scale3d(1,1,1)
    &.ng-hide-add
    &.ng-hide-remove
      display: block!important
    &.ng-hide
      opacity: 0
      height: 0
      -webkit-transform: scale3d(1,0,1)

  .auth
    position: relative
    height: 138px
    .animate-switch
      position: absolute
      width: 100%
      &.ng-enter
      &.ng-leave
        transition: 0.2s ease all
      &.ng-enter
        opacity: 0
        &.ng-enter-active
          opacity: 1
      &.ng-leave
        opacity: 1
        &.ng-leave-active
          opacity: 0

  .setting-labels
    width: label-width px
    display: inline-block
    color: #888
    label
      font-weight: normal

  .setting-options
    height: height_input + 8 px
    width: 100%
    padding: 4px label-width - 0px 0 0
    margin-right: - label-width px
    display: inline-block

  .url
    span
      display: table
      position: relative
      left: 100%
      top: -22px
      margin-left: -18px
      font-size: 1.2em
      color: color_key
      background-color: #fff

  .selectAuth
    margin: 0px auto 15px auto
    display: table

    button
      border-color: color_key
      color: color_key
      padding: 0px 15px
      transition: background-color .2s ease
      &:hover
        border-color: color_key_down
        color: color_key_down
        background-color: #fff

    .active
      background-color: color_key
      color: snow
      &:hover
        color: snow
        background-color: color_key_down

  .save
    position: relative
    display: flex
    justify-content: flex-end
    button
      padding: 2px 15px



  .account-list
    padding-left: 4px
    .number
      transition: ease .2s

    & > li
      counter-increment: account
      margin-bottom: 1em
      & > .number:before
        content: counter(account)
        padding-right: 10px
        color: #aaa

      &:hover
        .number
          padding-left: 5px
        span
        .btn
          color: color_key
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));
        .number:before
          color: color_key

    li
      list-style-type: none
      display: flex
      align-items: center

      .btn
        border: none
        padding: 0 3px
        color: #aaa

      .list-label
        width: 100%
        text-ellipsis()

  .project-list
    padding-left: 6px
    color: #aaa


#about
  color: #fff
  background-color: rgba(247,80,90, 1)
  margin: 30px -10px 0 -10px
  padding: 0 10px 5px 10px
  font-family: mplus-2c-thin

  header
    font-size: 1.7em
    height: 3em
    .caption
      color: #fff

    .line
      width: 70%
      height: 1px
      margin: 0 auto
      background-color: rgba(255, 255, 255, 0.8)

  p.privacy
    text-align: center
    margin: 25px

  footer
    text-align: right
    p
      margin: 0
      font-size: 0.8em

