@import '_variable'
@import '_mixin'
@import 'components/modal'

.wrap
  @import 'components/*'

.defs // for svg
  display: none

html, body
  height: 100%
  font-weight: 400
  font-size: 0.88em
  color: color_font
  font-family: mplus-2c-regular

input.input-sm
  height height_input px

input[type=number]::-webkit-inner-spin-button
  -webkit-appearance: none

.form-control
  border: none
  box-shadow: inset 0 0 0 1px rgba(0,0,0,.1)
  &:hover,
  &:focus
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.2)


.wrap
  height: 100%
  overflow-y: scroll
  display: flex
  flex-direction: column

  #issue header .caption .title .icon
    margin: 3px 8px 0 0

  #options, #accounts, #issue
    header
      a, a:hover
        text-decoration: none
    .caption__icon
      margin-left: 14px

  .caption
    align-center()
    height 100%
    color: color_key
  .caption__title
    margin: 0
    font-size: 1.05em
    flex: 1
    align-center()
  .caption__subtitle
    font-size: .95em
    margin: 0.1em -1em 0 0.7em
  .caption__icon
    font-size: 1.4em
    margin-right: 0.4em
  .caption__icon--tomato
    width: 23px
    height: 23px
    margin-right: 0.3em
  .caption__icon--slide
    padding: 0 4px
    font-size: 1.4em
    opacity: 0
    transition: opacity 0.2s ease
  .caption__icon--collapse
    font-size: 1.4em
    position: relative
    left: 18px
    opacity: 0
    visibility: hidden
    transition: 0.2s ease
  .caption:hover .caption__icon--collapse
    visibility: visible
    opacity: 1


.content
  margin-top: height_header px
  overflow: hidden
  flex-grow: 1
  flex-shrink: 0

  & > section
    padding: 10px

.searchform
  margin-bottom: 5px

.animate-switch-container
  position: relative

.animate-switch
  position: absolute
  width: 100%

.searchform-icon
  margin-right -5px
  padding-right 5px
  position: relative
  i
    opacity: .5
    position: absolute
    top: 8px
    right: 12px
    padding-left: 2px
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .7

.searchform-with-icon
  align-items: center
  display: flex
  position: relative
  i
    opacity: .5
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .8
  .twitter-typeahead
    flex: 1

.header-bar
  position: fixed
  width: 100%
  height: height_header px
  background: #fff
  transition: box-shadow .2s ease
  card(1)
  z-index: 100000
  &:hover
    card(2)

.project
  height: 0

.project-id
  color #aaa

.project-label
  padding: 0 1em 0 .5em
  max-width: 80%
  display: inline-block
  vertical-align: bottom
  text-ellipsis()

.project-title
  width: 100%
  border: none
  padding: 0
  height: height_header px
  background-color: #fff
  position: absolute
  outline: none
  z-index: 1
  .fa
    font-size: 1.3em
    color #ccc
    transition: color .2s ease
  &:hover .fa
    color #666

input.project-search
  height: 3em

.project-search
  padding-left: 16px
  position: absolute
  transition: left .3s ease
  left: 40%
  z-index: 102
  opacity: 0
  visibility: hidden

.project-search.active
  visibility: visible
  opacity: 1
  left: 0
  box-shadow: none

.project-content
  position: fixed
  width: 100%
  max-height: 90%
  min-height: 5px
  top: -100%
  background-color: #fff
  card(3)
  transition: top .3s ease
  overflow-y: scroll

.project-content.active
  top: 2.5em

.account-list
  margin: 0
  padding-left: 0

.numbered, .starred
  &>.numbered-label
    line-height: height_input px
    margin: -12px 0 0 0.5em
    padding-left: 0.2em
    border-bottom: solid 1px #ccc
.numbered
  counter-increment: account
  &>.numbered-label:before
    content: counter(account)
    padding-right: 0.4em
    color #aaa
.starred
  &>.numbered-label:before
    content: "â˜…"
    padding-right: 0.5em
    color #aaa

.project-list
  padding-left: 0
  &>li
    display: flex
    padding-left: 1em
    list-style-type: none
    & span:nth-child(1)
      transition: margin-left .2s ease
    &:hover
      background-color: color_key_weak
      & span
        color: #fff
      & span:nth-child(1)
        margin-left: 0.5em
      .star__enable
        color: color_key
    .numbered-label
      width: 100%
      height: 24px

.input-and-btn
  display: flex
  .input
    flex: 1
  .btn
    color: color_icon
    &:hover
      color: color_key

@keyframes slide-in-left
  from {left: 100%}
  to   {left: 0}

@keyframes slide-out-left
  from {left: 0}
  to   {left: -100%}

@keyframes slide-in-right
  from {right: 100%}
  to   {right: 0}

@keyframes slide-out-right
  from {right: 0}
  to   {right: -100%}

.rotate__fast
  transition: transform .25s ease

.rotate__slow
  transition: transform .5s ease

.rotate180
  transform: rotate(180deg)

.rotate225
  transform: rotate(180deg + 45deg)

.rotate360
  transform: rotate(360deg)

.top-space-l
  padding-top: 25px

.top-space-m
  padding-top: 10px

.top-space-s
  padding-top: 5px

.bottom-space-l
  padding-bottom: 25px

.bottom-space-m
  padding-bottom: 10px

.bottom-space-s
  padding-bottom: 5px

.curor-pointer
  cursor: pointer

.property-list
  border-bottom: solid 1px $color_border
  padding: 0px 9px 0px 10px
  height: $height_property_list
  transition: background .2s ease
  &:hover
    background-color: $color_back_hover

  span:not(.twitter-typeahead)
    font-weight: normal
    text-ellipsis()

  label
    display: flex
    align-items: center
    justify-content: space-between
    height: 100%
    margin: 0

  input:not([type=checkbox])
    box-shadow: none
    background: transparent
    text-align: right
    flex: 1
    &:hover, &:focus
      box-shadow: none

  input::-webkit-input-placeholder
    color: #aaa

  input.switch
    position: relative
    left: 6px

  .input-sm
    font-size: $font_size_selected
    color: $color_font_selected

  .input-sm[type=select]
    padding-right: 22px

  .input-sm:not([type=select])
    padding: 0 0 0 10px

  .fa.fa-asterisk
    font-size: 1em
    width: 0
    color: color_key
    opacity: 0.8
    margin-left: 0.2em

.property-list__first
.well > .property-list:first-child
  border-top: solid 1px $color_border

.property-list
.property-list__selected
  .fa
    font-size: 18px

.property-list__tab
  position: relative

.tab-list
  padding: 0
  margin: 0
  z-index: 1
  &>li
    padding-left: 10px
    line-height: $height_property_list - 1
    border-bottom: 1px solid $color_border
    transition: background .2s ease
    &:hover, &.hover, &.active
      background-color: $color_back_hover
  &>li.active a
    width: calc(6.5em  - 9px)
    display: inline-block
    background-color: $color_back_hover
    position: relative
    z-index: 2
  a
    color: color_font
    cursor: default
    text-decoration: none
    transition: background .2s ease

.tab-content
  position: absolute
  height: 100%
  top: 0
  right: 0
  left: $width_tab

.tab-content>.tab-pane
  position: absolute
  display: block
  top: 0
  right: 0
  bottom: 0
  left: 0
  &.active .property-list__selection
    left: 0
    z-index: 1
    height: auto
    min-height: $height_property_list * 4

.property-list__selected
  position: absolute
  top: 0
  right: 0
  left: $width_tab
  z-index: 1
  ul
    height: $height_property_list
    border-bottom: solid 1px $color_border
    margin: 0
    padding: 0 20px 0 0
    justify-content: flex-end
    cursor: pointer
  li
    list-style-type: none
    font-size: $font_size_selected
    margin-right: 0.6em
    color: $color_font_selected
    text-ellipsis()
    &:not(:last-child):after
      content: ', '
  i
    line-height: $height_property_list - 1
    position: absolute
    right: 10px

.property-list__selection
  width: 100%
  height: 100%
  text-align: right
  color: color_font
  margin: 0
  padding: 5px 0
  position: relative
  left: 200%
  transition: left .2s ease
  background-color: $color_back_hover
  &.property-list
    border-left: 1px solid $color_border
  &>li
    list-style-type: none
    line-height: 1.8em
  &>li:hover
    background-color: #f0f0f0
  label
    width: 100%
    padding-right: 10px
    cursor: pointer
  span
    display: inline-block
    width: calc(100% - 1.6em)
    text-ellipsis()

.loading
  position: relative

.loading:after
  fa()
  content: "\f110"
  font-size: 1.4em
  animation: spin 1.4s infinite linear
  position: absolute
  top: 0.2em
  left: calc(50% - 0.4em)


#timer

  width_button = 34

  header
    height: 5em
    margin-top: -10px

  .caption
    cursor: pointer
    position: relative

  .caption__title
    width: 100%
    height: 18px
    position: absolute
    top: 36%
    left: 0
    z-index: -1

  .caption__icon--slide
    flex-grow: 1
    height: 100%
    display: flex
    align-items: center
  .caption__icon--slide:hover
    opacity: 1
  .caption__icon--left
    justify-content: flex-start
  .caption__icon--right
    justify-content: flex-end

  .select
    position: relative
    height: height_input px
    background-color: color_key
    border-radius: field_border_radius !important

  .inputWidhButton
    padding-right width_button px

    input
      border-right: solid 1px #f5f5f5
      border-radius: field_border_radius 0 0 field_border_radius !important
      box-shadow: none
      background-color: color_key
      color: #fff

    input::-webkit-input-placeholder
      color: rgba(255, 255, 255, 0.9)

    .searchform-icon i
      font-size: 1.3em
      opacity: .7
      color: #fff
      top: 6px
      right: 14px

    .searchform-icon:hover i
      opacity: .9


  .btn
    margin-left: 4px
    border: none
    display: inline-block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: width_button px
    color: #f5f5f5
    &:hover
      background-color: color_key_down
      color: #ffffff

    img
      width: 24px
      height: 24px

  .progress
    margin-bottom 0px
    height: height_input px
    border-right: solid 1px #f5f5f5
    border-radius: 2px 0 0 2px

  .progress-bar
    width: 100%
    background-color: color_key
    box-shadow: none
    color: #fafafa
    display: flex

    span
      line-height: height_input px

    & > span
      text-ellipsis()
      padding: 0 2px
      flex: 1

    timer span
      padding-right: 7px

  .form-inline
    display: flex
    margin: 10px 0 0 0
    height: height_input px

  .select-activity
    flex: 5

  .separater
    width: 5px

  .time
    flex: 3
    input
      text-align: right
      padding: 0 22px 0 10px
      &:hover+span
        color: #888
    .ui-timepicker-list li
      text-align: right
      padding-right: 22px
    span
      line-height: height_input px
      color: #aaa
      position: relative

  .time__total
    width: 100%
    text-align: right
    text-ellipsis()

  .comment
    margin: 10px 0 0 0

    textarea
      margin 6px 0 0 0px
      border-radius: field_border_radius !important

    div
      height: 0

    span
      position: relative
      top: -15px
      opacity: 0.8
      float: right

  container_height = 190px
  .animate-switch-container
    height: container_height
    transition-duration: .3s

    &:before
      content: ""
      background-color: #fff
      width: 10px
      height: container_height
      position: relative
      left: -10px
      float: left
      z-index: 1
    &:after
      content: ""
      background-color: #fff
      width: 10px
      height: container_height
      position: relative
      right: -10px
      float: right
      z-index: 1

  .animate-switch.ng-animate
    transition-duration: .25s

  .carousel-to-right
    .ng-enter
      animation: slide-in-right  .25s ease-out
    .ng-leave
      animation: slide-out-right .25s ease-out

  .carousel-to-left
    .ng-enter
      animation: slide-in-left  .25s ease-out
    .ng-leave
      animation: slide-out-left .25s ease-out

  .select-issues
    .tt-dropdown-menu
      padding: 0 0 5px 0
    .tt-suggestion
      height: auto
      padding: 0
    .tt-cursor
      background-color: #fff

  .select-issues__project
    display: block
    height: 3em
    width: 100%
    font-size: 0.9em
    text-ellipsis()
    margin: 0 0.5em
    padding: 0.4em 0 0 0.3em
    border-bottom: solid 1px #ccc

  .numbered-label__number
    margin-left: 0.6em
    transition: margin-left .2s ease

  .tt-cursor
    .select-issues__project
      color: color_font
    .numbered-label
      background-color: color_key_weak
    .numbered-label__number
      margin-left: 1em
      color: #fff
    .numbered-label__label
      color: #fff


#issue

  .animate-height
    transition: height .32s ease

  .input-and-btn .btn
    margin: -6px 0 0 6px
    font-size: 1.7em
    .fa
      position: relative
      top: -2px

  .issue-list

    .active .numbered-label, .active .numbered-label:hover
      margin-left: 5px
      color: #fff
      span
        color #fff

    .numbered-label
      span:nth-child(1)
        transition: margin-left .2s ease
    .numbered-label:hover
      span
      .btn
        color: color_key
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));
      &>span:nth-child(1)
        margin-left: 0.5em

      .tooltip-inner span
        color: color_font

  .issue-list__content
    padding-left: 0px
    margin: 0
    &.loading:after
      color: #999
      font-size: 1.8em
      margin: 5px 0
      position: relative
      top: 0
      left: calc(50% - 0.4em - 2px)

  .issue-list__content--empty
    margin-bottom: 0px

  .issue-list__content--empty:after
    content: "not found ..."
    color: #aaa
    align-center()

  .issue-list__item
    list-style-type: none
    height: height_issue_list_item
    position: relative
    display: flex

    .btn
      border: none
      color: #aaa

    .btn.external-link:hover
      color: color_key

    &.active
      background-color: color_key
      border-radius: 10px
      transition: background-color ease 0.2s

  .issue-list__content.paging
    transition-duration: .3s

  .issue-list__content:not(.paging-active)
    .ng-enter
      animation: fade-in .2s ease-out
    .ng-leave
      animation: fade-out .2s ease-out

  .issue-list__content.paging-left
    .ng-enter
      animation: slide-in-left .2s ease-out
    .ng-leave
      display: none

  .issue-list__content.paging-right
    .ng-enter
      animation: slide-in-right .2s ease-out
    .ng-leave
      display: none

  @keyframes fade-in
    from
      height: 0px
      opacity: 0
    to
      height: height_issue_list_item
      opacity: 1

  @keyframes fade-out
    from
      height: height_issue_list_item
      opacity: 1
    to
      height: 0px
      opacity: 0

#accounts

  label-width = 70

  .isSaving
    opacity: 0.8
    cursor: wait
    pointer-events: auto

  .input-and-btn
    .btn
      margin: 0 0 0 7px
      height: height_input px
      line-height: height_input px
      font-size: 16px

  .account-setting
    position: relative
    height: 16em
    .animate-switch
      &.ng-enter
      &.ng-leave
        transition: 0.2s ease all
      &.ng-enter
        opacity: 0
        &.ng-enter-active
          opacity: 1
      &.ng-leave
        opacity: 1
        &.ng-leave-active
          opacity: 0

  .account-setting__buttons
    display: flex
    justify-content: center

    .account-setting__buttons--add
      height: height_input - 4 px
      width 12em
      margin 0 2.5em

    .account-setting__buttons--save
    .account-setting__buttons--remove
      height: height_input - 4 px
      width 7em
      margin 0 0.25em

  .select-mode
    align-center()
    margin: 0 2.5em 1.2em 2.5em

  .select-mode__button
    width: 10em
    height: height_input - 4 px
    border-color: color_key_weak
    color: color_key_weak
    transition: all .2s ease
    &:hover
      border-color: color_key
      color: color_key

    &.active
      background-color: color_key_weak
      color: snow
      &:hover
        background-color: color_key
        color: snow

  .clear
    align-center()
    padding: 15px 0
    button
      padding: 2px 15px
      color: color_key
      i
        padding-right 6px
        font-size: 1.3em
      i, span
        vertical-align: middle

  .account-list
    padding-left: 4px
    .number
      transition: padding-left ease .2s

    & > li
      counter-increment: account
      margin-bottom: 0.5em
      cursor: pointer
      align-items: center

      &.isSaving
        cursor: wait

      & > .number:before
        content: counter(account)
        padding-right: 10px
        color: #aaa

      &:hover
        .number
          padding-left: 5px
        span
        .btn
          width: auto
          color: color_key
          visibility: visible
          opacity: 1
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));
        .number:before
          color: color_key

      .btn
        border: none
        color: #aaa
        opacity: 0
        visibility: hidden
        transition: opacity .2s ease
        width: 0

#options

  .setting__section
    display: flex
    align-items: center

  .setting__labels
    flex: 1
    margin-bottom: 3px

  .setting__description
    margin-left: 5px
    color: #999

  .setting__options
    .btn-sm
      color: color_font
      margin: 0 0 0 5px
      padding: 3px 6px
      &.loading
        background-color: #eee !important
        border-color: #adadad

  .setting__button
    margin-right: -6px

  .setting__input
    width: 3.7em
    text-align: right

#about
  color: #fff
  background-color: rgba(247,80,90, 1)
  padding: 40px 10px 5px 10px
  font-family: mplus-2c-thin

  .caption
    text-align: center
    font-size: 1.7em
    color: #fff

  .version
    position: relative

    span
      position: relative
      left: 50%
      margin-left: 30px

  footer
    padding: 30px 0 0 0
    text-align: right
    p
      margin: 0
      font-size: 0.8em

