@import '_variable'
@import '_mixin'
@import 'components/modal'

.wrap
  @import 'components/*'

html, body
  height: 100%
  font-weight: 400
  font-size: 0.88em
  color: #555
  font-family: mplus-2c-regular
  -webkit-app-region: drag

input, textarea
  -webkit-app-region: no-drag

input.input-sm
  height height_input px

.form-control
  border: none
  box-shadow: inset 0 0 0 1px rgba(0,0,0,.1)
  &:hover,
  &:focus
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.2)

.wrap
  height: 100%
  overflow-y: scroll

  .invalid
  .invalid:hover
  .invalid:focus
    border-color: #e9322d
    box-shadow: 0 0 6px #f8b9b7

  header
    height: 5em
    .caption
      align-center()
      height 100%
      color: color_key
      .fa
        padding: 0 4px
        font-size: 1.4em
        opacity: 0
        visibility: hidden
        transition: opacity 0.2s ease
      &:hover > .fa
        visibility: visible
        opacity: 1
    .title
      align-center()
      font-size: 1.05em
      flex: 1
    .subtitle
      margin: 0.1em -1.5em 0 0.7em
    .icon
      display: table
      font-size: 1.4em
      margin: 0 8px 0 0
      span
        display: table-cell
        text-align: center
        vertical-align: middle

  #issue header .caption .title .icon
    margin: 3px 8px 0 0


.frame
  margin-top: height_header px
  overflow: hidden

  & > section
    padding: 0 10px 25px 10px

.searchform
  margin-bottom: 5px

.animate-switch-container
  position: relative

.animate-switch
  position: absolute
  width: 100%

.searchform-icon
  margin-right -5px
  padding-right 5px
  position: relative
  input
    padding-right: 22px
  i
    opacity: .5
    position: absolute
    top: 8px
    right: 12px
    padding-left: 2px
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .7

.searchform-with-icon
  align-items: center
  display: flex
  position: relative
  i
    opacity: .5
    position: relative
    left: -1px
    transition: opacity .3s ease
    pointer-events: none
  &:hover i
    opacity: .8
  .twitter-typeahead
    flex: 1

.window-close
  position: absolute
  right: 0
  height: height_header px
  background-color: transparent
  color: #ccc
  transition: color  .2s ease
  outline: none
  border: none
  z-index: 2
  &:hover .icon-cross
    color: #fff
    background-color: color_key_weak
  .icon-cross
    width: icon_size px
    line-height: icon_size px
    border-radius: 50%
    transition: background-color,color .2s ease

.header-bar
  position: fixed
  width: 100%
  height: height_header px
  background: #fff
  transition: box-shadow .2s ease
  card(1)
  z-index: 101
  &:hover
    card(2)

.project
  height: 0

.project-id
  color #aaa

.project-label
  padding: 0 1em 0 .5em
  max-width: 80%
  display: inline-block
  vertical-align: bottom
  text-ellipsis()

.project-title
  width: 100%
  border: none
  padding: 0
  height: height_header px
  background-color: #fff
  position: absolute
  outline: none
  z-index: 1
  .fa
    font-size: 1.3em
    color #ccc
    transition: color .2s ease
  &:hover .fa
    color #666

input.project-search
  height: 3em

.project-search
  padding-left: 16px
  position: absolute
  transition: left .3s ease
  left: 40%
  z-index: 102
  opacity: 0
  visibility: hidden

.project-search.active
  visibility: visible
  opacity: 1
  left: 0
  box-shadow: none

.project-content
  position: fixed
  width: 100%
  max-height: 90%
  min-height: 5px
  top: -100%
  background-color: #fff
  card(3)
  transition: top .3s ease
  overflow-y: scroll

.project-content.active
  top: 2.5em

.account-list
  margin: 0
  padding-left: 0

.numbered, .starred
  &>.numbered-label
    line-height: height_input px
    margin-left: 0.5em
    padding-left: 0.2em
    border-bottom: solid 1px #ccc
.numbered
  counter-increment: account
  &>.numbered-label:before
    content: counter(account)
    padding-right: 0.4em
    color #aaa
.starred
  &>.numbered-label:before
    content: "â˜…"
    padding-right: 0.5em
    color #aaa

.project-list
  padding-left: 0
  &>li
    display: flex
    padding-left: 1em
    list-style-type: none
    & span:nth-child(1)
      transition: margin-left .2s ease
    &:hover
      background-color: color_key_weak
      & span
        color: #fff
      & span:nth-child(1)
        margin-left: 0.5em
      .star__enable
        color: color_key
    .numbered-label
      width: 100%
      height: 24px

.input-and-btn
  display: flex
  .input
    flex: 1
  .btn
    color: color_button_font
    transition: color, transform .25s ease
    &:hover
      color: color_key

@keyframes slide-in-left
  from {left: 100%}
  to   {left: 0}

@keyframes slide-out-left
  from {left: 0}
  to   {left: -100%}

@keyframes slide-in-right
  from {right: 100%}
  to   {right: 0}

@keyframes slide-out-right
  from {right: 0}
  to   {right: -100%}

.rotate180
  transform: rotate(180deg)

.rotate225
  transform: rotate(180deg + 45deg)

.rotate360
  transform: rotate(360deg)

.bottom-space
  margin-bottom: 10px


$color_border = #ddd
$color_well_back = #f5f5f5
$height_property_list = 3em
$width_tab = 6.5em

.property-list
  border-bottom: solid 1px $color_border
  padding: 5px 10px

  span
    font-weight: normal
    text-ellipsis()

  input[type=checkbox]
    -webkit-appearance: none
    width: 1.2em
    height: 1em
    margin: 0
    outline: none
    cursor: pointer

  input[type=checkbox]:after
    transition: border .2s ease

  input[type=checkbox]:hover:after
    border: 1px solid #ccc

  input[type=checkbox]:checked:after
    border: 1px solid #888

  input[type=checkbox]:hover:after
  input[type=checkbox]:checked:after
    content: ' '
    display: inline-block
    width: 10px
    height: 5px
    position: relative
    top: -60%
    left: 25%
    border-top: 0
    border-right: 0
    transform: rotate(-45deg)

.property-list__tab
  position: relative

.tab-list
  padding: 0
  margin: 0
  z-index: 1
  li
    padding-left: 10px
    line-height: $height_property_list
    border-bottom: 1px solid $color_border
  li.active a
    width: $width_tab + 0.1
    display: inline-block
    background-color: $color_well_back
    position: relative
    z-index: 2
  a
    color: #555
    cursor: default
    text-decoration: none

.tab-content
  position: absolute
  height: 100%
  top: 0
  right: 0
  left: $width_tab

.tab-content>.tab-pane
  position: absolute
  display: block
  top: 0
  right: 0
  bottom: 0
  left: 0
  &.active .property-list__selection
    left: 0
    z-index: 1

.property-list__selected
  position: absolute
  top: 55px
  right: 0
  left: $width_tab
  z-index: 1
  background-color: $color_well_back
  ul
    height: 38px
    border-bottom: solid 1px $color_border
    margin: 0
    padding: 0 10px 0 0
    display: flex
    align-items: center
    justify-content: flex-end
  li
    list-style-type: none
    font-size: .9em
    margin-right: 0.4em
    text-align: right
    &:not(:last-child):after
      content: ', '

.property-list__tab:hover+.property-list__selected
  display: none

.property-list__selection
  width: 100%
  height: 100%
  text-align: right
  color: #555
  margin: 0
  padding: 0 9px 0 0
  position: relative
  left: 200%
  transition: left .3s ease
  background-color: $color_well_back
  &.property-list
    border-left: 1px solid $color_border
  &>li
    list-style-type: none
  label
    width: 100%
    cursor: pointer
  span
    display: inline-block
    width: calc(100% - 1.6em)
    text-ellipsis()

#header
  .account-list
    &>li
      margin-top: -12px

#timer

  width_button = 34

  .caption
    cursor: pointer

  .select
    position: relative
    height: height_input px
    background-color: color_key
    border-radius: field_border_radius !important

  .inputWidhButton
    padding-right width_button px

    input
      border-right: solid 1px #f5f5f5
      border-radius: field_border_radius 0 0 field_border_radius !important
      box-shadow: none
      background-color: color_key
      color: #fff

    input::-webkit-input-placeholder
      color: rgba(255, 255, 255, 0.9)

    .searchform-icon i
      font-size: 1.3em
      opacity: .7
      color: #fff
      top: 6px
      right: 14px

    .searchform-icon:hover i
      opacity: .9


  .btn
    margin-left: 4px
    border: none
    display: inline-block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: width_button px
    color: #f5f5f5
    &:hover
      background-color: color_key_down
      color: #ffffff

    img
      width: 24px
      height: 24px

  .progress
    margin-bottom 0px
    height: height_input px
    border-right: solid 1px #f5f5f5
    border-radius: 2px 0 0 2px

  .progress-bar
    width: 100%
    background-color: color_key
    box-shadow: none
    color: #fafafa
    display: flex

    span
      line-height: height_input px

    & > span
      text-ellipsis()
      padding: 0 2px
      flex: 1

    timer span
      padding-right: 7px

  .form-inline
    display: flex
    margin: 10px 0 0 0
    height: height_input px

  .select-activity
    flex: 5

  .separater
    width: 5px

  .time
    flex: 3
    input
      margin 0 -27px 0 0
      padding: 0 28px 0 10px
      display: inline-block
      position: relative
      &:hover+span
        color: #888
    span
      line-height: height_input px
      display: inline-block
      color: #aaa
      position: relative
      left: 2px

  .comment
    margin: 10px 0 0 0

    textarea
      margin 6px 0 0 0px
      border-radius: field_border_radius !important

    div
      height: 0

    span
      position: relative
      top: -15px
      opacity: 0.8
      float: right

  container_height = 190px
  .animate-switch-container
    height: container_height

    &:before
      content: ""
      background-color: #fff
      width: 10px
      height: container_height
      position: relative
      left: -10px
      float: left
      z-index: 1
    &:after
      content: ""
      background-color: #fff
      width: 10px
      height: container_height
      position: relative
      right: -10px
      float: right
      z-index: 1

  .animate-switch.ng-enter
    animation: slide-in-left .32s ease-out

  .animate-switch.ng-leave
    animation: slide-out-left .32s ease-out

  .select-issues
    .tt-dropdown-menu
      padding: 0 0 5px 0
    .tt-suggestion
      height: auto
      padding: 0
    .tt-cursor
      background-color: #fff

  .select-issues__project
    display: block
    height: 3em
    width: 100%
    font-size: 0.9em
    text-ellipsis()
    margin: 0 0.5em
    padding: 0.4em 0 0 0.3em
    border-bottom: solid 1px #ccc

  .numbered-label__number
    margin-left: 0.6em
    transition: margin-left .2s ease

  .tt-cursor
    .select-issues__project
      color: #555
    .numbered-label
      background-color: color_key_weak
    .numbered-label__number
      margin-left: 1em
      color: #fff
    .numbered-label__label
      color: #fff


#issue

  .animate-height
    transition: height .32s ease

  .input-and-btn .btn
    margin: 0 0 7px 0.5em
    font-size: 1.3em

  .issue-list

    .active .numbered-label, .active .numbered-label:hover
      margin-left: 5px
      color: #fff
      span
        color #fff

    .numbered-label
      span:nth-child(1)
        transition: margin-left .2s ease
    .numbered-label:hover
      span
      .btn
        color: color_key
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));
      & span:nth-child(1)
        margin-left: 0.5em

      .tooltip-inner span
        color: #555

  .issue-list__content
    padding-left: 4px

  .issue-list__content--empty
    margin-bottom: 0px

  .issue-list__content--empty:after
    content: "not found ..."
    color: #aaa
    align-center()

  .issue-list__item
    list-style-type: none
    height: height_issue_list_item
    position: relative
    overflow: hidden
    display: flex

    .btn
      border: none
      color: #aaa

    .btn.external-link:hover
      color: color_key

    &.active
      background-color: color_key
      border-radius: 10px
      transition: background-color ease 0.2s

  .issue-list__content.paging
    transition-duration: .3s

  .issue-list__content:not(.paging-active)
    .ng-enter
      animation: fade-in .2s ease-out
    .ng-leave
      animation: fade-out .2s ease-out

  .issue-list__content.paging-left
    .ng-enter
      animation: slide-in-left .2s ease-out
    .ng-leave
      display: none

  .issue-list__content.paging-right
    .ng-enter
      animation: slide-in-right .2s ease-out
    .ng-leave
      display: none

  @keyframes fade-in
    from
      height: 0px
      opacity: 0
    to
      height: height_issue_list_item
      opacity: 1

  @keyframes fade-out
    from
      height: height_issue_list_item
      opacity: 1
    to
      height: 0px
      opacity: 0

  .well
    padding: 10px 0

#accounts

  label-width = 70

  .form-group
    margin-bottom: 10px
    display: flex
    align-items: center

  .input-and-btn
    .btn
      margin: 0 0 0 7px
      height: height_input px
      line-height: height_input px
      font-size: 16px

  .auth
    position: relative
    height: 15em
    .animate-switch
      &.ng-enter
      &.ng-leave
        transition: 0.2s ease all
      &.ng-enter
        opacity: 0
        &.ng-enter-active
          opacity: 1
      &.ng-leave
        opacity: 1
        &.ng-leave-active
          opacity: 0

  .setting-labels
    width: label-width px
    color: #888
    label
      font-weight: normal

  .setting-options
    height: height_input + 8 px
    flex: 1

  .url
    span
      display: table
      position: relative
      left: 100%
      top: -22px
      margin-left: -18px
      font-size: 1.2em
      color: color_key
      background-color: #fff

  .selectAuth
    margin: 0px auto 15px auto
    display: table

  .selectAuth__button
    border-color: color_key_weak
    color: color_key_weak
    padding: 0.15em 1.8em
    transition: all .2s ease
    &:hover
      border-color: color_key
      color: color_key

    &.active
      background-color: color_key_weak
      color: snow
      &:hover
        background-color: color_key
        color: snow

  .save
    position: relative
    display: flex
    justify-content: center
    button
      padding: 0.25em 6.4em
      color: snow
      background-color: color_key_weak
      &:hover
        background-color: color_key

  .clear
    align-center()
    padding: 15px 0
    button
      padding: 2px 15px
      color: color_key
      i
        padding-right 6px
        font-size: 1.3em
      i, span
        vertical-align: middle

  .account-list
    padding-left: 4px
    .number
      transition: padding-left ease .2s

    & > li
      counter-increment: account
      margin-bottom: 0.5em
      cursor: pointer
      list-style-type: none
      display: flex
      align-items: center

      & > .number:before
        content: counter(account)
        padding-right: 10px
        color: #aaa

      &:hover
        .number
          padding-left: 5px
        span
        .btn
          color: color_key
        .icon-minus
          background-image: -webkit-gradient(linear, left center, right center, from(color_key), to(color_key));
        .number:before
          color: color_key

      .btn
        border: none
        padding: 0 3px
        color: #aaa

#options

  input[type=checkbox],
  input[type=radio]
    -webkit-appearance: none
    box-shadow: inset 0px 0px 0px 1px #e6e6e6
    border-radius: 15px
    background-color: #fff
    padding: 1px
    display: inline-block
    width: 52px
    height: 31px
    position: relative
    cursor: pointer
    transition: all .3s ease-out
    -webkit-transform: scale(.7) // Adjust size
    outline: none
    border: none

  input[type=checkbox]:checked,
  input[type=radio]:checked
    box-shadow: inset 0px 0px 0px 20px #f57f87

  input[type=checkbox]:after,
  input[type=radio]:after
    content: ''
    position: absolute
    width: 29px
    height: 29px
    border-radius: 15px
    box-shadow: 0px 2px 2px 1px rgba(0,0,0,.2)
    cursor: pointer
    background-color: #fff
    left: 1px
    transition: ease-in .1s

  input[type="checkbox"]:checked:after,
  input[type="radio"]:checked:after
    left: 22px

  input[type=number]::-webkit-inner-spin-button
    -webkit-appearance: none

  .setting__section
    display: flex
    align-items: center

  .setting__labels
    flex: 1
    margin-bottom: 3px

  .setting__description
    margin-left: 5px
    color: #999

  .setting__options
    .btn-sm
      color: color_button_font
      padding: 5px 7px
      margin: 0 0 0 5px
      line-height: 1.2

  .setting__button
    margin-right: -6px

  .setting__input
    width: 3.7em
    text-align: right

#about
  color: #fff
  background-color: rgba(247,80,90, 1)
  padding: 40px 10px 5px 10px
  font-family: mplus-2c-thin

  .caption
    text-align: center
    font-size: 1.7em
    color: #fff

  .version
    position: relative

    span
      position: relative
      left: 50%
      margin-left: 30px

  footer
    padding: 30px 0 0 0
    text-align: right
    p
      margin: 0
      font-size: 0.8em

