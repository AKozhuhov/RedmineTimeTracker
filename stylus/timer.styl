html, body
  height 100%

.wrap
  height 100%
  padding-left 10px
  padding-right 10px
  overflow-y: scroll

.inputWidhButton
  display inline-block
  padding-top 0
  width 100%
  vertical-align middle
  margin-right -27px
  padding-right 27px

.iconButton
  font-size 24px
  padding 0px
  margin-left: 4px
  background-color transparent
  border: none

  &:active
    -webkit-box-shadow 0px 0px
    box-shadow 0px 0px

  &:focus
    outline: none

.message
  position: fixed
  bottom: 0
  left: 0
  right: 0
  background-color: #333
  opacity: 0.75
  text-align: center

  span
    color: #eee

select.input-sm,
input.input-sm
  height 28px


#timer

  .icon-play-sign
    color #F56F6B
    &:hover
      color #d2322d

  .icon-stop
    color #aaaaaa
    font-size 25px
    &:hover
      color #c0c0c0


  .progress
    margin-bottom 0px

  .comment
    textarea
      margin 2px 0 0 0px
      width 100%

    div
      height: 0

    span
      position: relative
      top: -21px
      opacity: 0.6


#issue

  .form-group
    display: inline-block
    margin-bottom: 0
    vertical-align: middle

  .project
    width: 60%
    margin-right: 5px

  .issueNumber
    width: 40%
    margin-right -5px
    padding-right 5px

  #issueList
    li
      list-style-type none


