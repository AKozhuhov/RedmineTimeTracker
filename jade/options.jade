div#options(ng-controller='OptionCtrl')

  header
    div.caption
      div.title
        div.icon
          span.icon-settings
        span Options


  div.settings-section.form-group
    div.setting-labels
      label.control-label Reports Usage
      div.setting-description
        span Automatically send usage statistics and crash reports.
    div.setting-options
      input.btn(type="checkbox", name="reportUsage", ng-model="options.reportUsage")
