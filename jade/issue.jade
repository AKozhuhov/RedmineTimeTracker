div#issue(ng-controller='IssueCtrl')

  form.form-inline(action='#', role='form')

    // select
    div

      // project
      div.form-group.project
        dropdown(items='projects', selected='selectedProject')

      // search
      div.form-group.search
        label.sr-only Search
        input.form-control.input-sm(type='search',
                                    placeholder='search...',
                                    ng-model='searchText')
        i.fa.fa-search


    // issues
    div.issueList
      ul
        li(ng-repeat='issue in issues | filter:issueFilter | orderBy:"id"')
          span.id {{issue.id}}
          span.subject {{issue.subject}}
          button.btn(type='button',
                     ng-click='onClickIssueAdd(issue)',
                     ng-hide='isContained(issue)')
            i.fa.fa-plus
          button.btn(type='button',
                     ng-click='onClickIssueRemove(issue)',
                     ng-show='isContained(issue)')
            i.fa.fa-minus

