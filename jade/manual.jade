// time track
div.select
  div.inputWidhButton
    input.sfTypeahead.form-control.input-sm(type="text"
      options="inputOptions"
      datasets="ticketData"
      ng-model="selectedTicket"
      ng-click="selectedTicket = null"
      placeholder='Select issue...')

  button.btn(type='button', ng-click='clickManual()', ga-click='postManual')
    i.fa.fa-check

// activity & total
div.form-inline

  div.activity
    input.sfTypeahead.form-control.input-sm(type="text"
      options="inputOptions"
      datasets="projects[selectedTicket[0].url].activities"
      ng-model="selectedActivity"
      ng-click="selectedActivity = null"
      placeholder='Select activity...')

  div.separater

  div.time
    label.sr-only input time
    input.form-control.input-sm(type='text',
                                ng-model='time.min')
    span min


// comment
div.comment
  textarea.form-control(name='comment',
                        rows='2',
                        placeholder='comments...',
                        ng-model='comment.text',
                        ng-change='comment.remain = comment.MaxLength - comment.text.length')
  div
    span.label.label-danger(ng-show="comment.remain < 0") {{comment.remain}}
