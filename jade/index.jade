html(ng-app='timeTracker', ng-csp="")

  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Redmine Time Tracker
    // bower
    link(rel='stylesheet', href='/components/angular/css/angular-csp.css')
    link(rel='stylesheet', href='/components/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/components/ladda/css/ladda-themeless.min.css')
    // other
    link(rel='stylesheet', href='/css/lib/font-awesome.min.css')
    link(rel='stylesheet', href='/css/lib/Simple-Line-Icons.css')
    link(rel='stylesheet', href='/css/mplus-2c-font.css')
    link(rel='stylesheet', href='/css/main.css')


  body(ng-controller='MainCtrl')

    div.wrap
      section(ng-include="'header.html'")
      .frame
        section(ng-include="'timer.html'")
        section(ng-include="'issue.html'")
        section(ng-include="'accounts.html'")
        section(ng-include="'options.html'")
      section(ng-include="'about.html'")
      section(ng-include="'message.html'")

    .src
      // bower
      script(src='/components/jquery/js/jquery.min.js')
      script(src='/components/angular/js/angular.min.js')
      script(src='/components/angular-route/angular-route.js')
      script(src='/components/angular-animate/js/angular-animate.min.js')
      script(src='/components/ladda/js/ladda.min.js')
      script(src='/components/ladda/js/spin.min.js')
      script(src='/components/sugar/sugar.min.js')
      script(src='/components/angular-typeahead/angular-typeahead.js')
      script(src='/components/typeahead.js/typeahead.bundle.js')
      script(src='/components/angular-bootstrap/js/ui-bootstrap.min.js')
      //other
      script(src='/scripts/lib/angular-timer.min.js')
      script(src='/scripts/lib/aes.js')
      script(src='/scripts/lib/google-analytics-bundle.js')

      if production
        script(src='/scripts/script.js')
      else
        script(src='/scripts/util.js')
        script(src='/scripts/app.js')
        script(src='/scripts/services/const.js')
        script(src='/scripts/services/log.js')
        script(src='/scripts/services/base64.js')
        script(src='/scripts/services/chrome.js')
        script(src='/scripts/services/account.js')
        script(src='/scripts/services/redmine.js')
        script(src='/scripts/services/project.js')
        script(src='/scripts/services/ticket.js')
        script(src='/scripts/services/state.js')
        script(src='/scripts/services/analytics.js')
        script(src='/scripts/services/message.js')
        script(src='/scripts/services/option.js')
        script(src='/scripts/services/resource.js')
        script(src='/scripts/services/baseEditState.js')
        script(src='/scripts/services/issueEditState.js')
        script(src='/scripts/services/eventDispatcher.js')
        script(src='/scripts/services/dataAdapter.js')
        script(src='/scripts/filters/numLength.js')
        script(src='/scripts/controllers/mainCtrl.js')
        script(src='/scripts/controllers/headerCtrl.js')
        script(src='/scripts/controllers/timerCtrl.js')
        script(src='/scripts/controllers/issueCtrl.js')
        script(src='/scripts/controllers/accountCtrl.js')
        script(src='/scripts/controllers/optionCtrl.js')
        script(src='/scripts/controllers/aboutCtrl.js')
        script(src='/scripts/directives/uzLoading.js')
        script(src='/scripts/directives/uzPagination.js')
